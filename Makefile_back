CC = cc
CFLAGS = -Wall -Wextra -Werror -D BUFFER_SIZE=5
RM = rm -f

LIB = ar rc

NAME = libft.a
EXE = a.out
HEADER = libft.h

SRCS =	get_next_line.c get_next_line_utils.c

OBJS = $(SRCS:.c=.o)

OBJS_BONUS = $(SRCS_BONUS:.c=.o)

%.o:%.c 	$(HEADER) Makefile
			$(CC) $(CFLAGS) -c $< -o $@

all: 		$(NAME)

$(NAME): 	$(OBJS)
			$(LIB) $(NAME) $(OBJS)

bonus:		$(OBJS) $(OBJS_BONUS)
			$(LIB) $(NAME) $(OBJS) $(OBJS_BONUS)

clean:
			$(RM) $(OBJS)

fclean: 	clean
			$(RM) $(NAME) $(EXE)

re:			fclean all

.PHONY: all clean fclean re
